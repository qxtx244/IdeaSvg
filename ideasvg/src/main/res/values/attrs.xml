<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- SvgView的自定义属性 -->
    <declare-styleable name="IdeaSvgView">

        <!-- 控件背景 -->
        <attr name="android:background"/>
        <!-- 控件宽 -->
        <attr name="android:layout_width"/>
        <!-- 控件高 -->
        <attr name="android:layout_height"/>

        <!-- svg宽 -->
        <attr name="svgWidth" format="integer"/>
        <!-- svg高 -->
        <attr name="svgHeight" format="integer"/>

        <!-- svg图形数据，引用vector xml -->
        <attr name="svgSrc" format="reference"/>
        <!-- svg的透明度，当定义了此属性，则svgSrc中定义的alpha值将会被忽略 -->
        <attr name="svgAlpha" format="float"/>

