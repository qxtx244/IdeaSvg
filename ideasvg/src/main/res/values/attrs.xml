<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- SvgView的自定义属性 -->
    <declare-styleable name="IdeaSvgView">

        <attr name="android:layout_width"/>
        <attr name="android:layout_height"/>

        <!-- svg绘制模式，[stroke]轮廓 [fill]填充 [stroke_and_fill]填充+轮廓 -->
        <attr name="style" format="flags">
            <flag name="stroke" value="0x1"/>
            <flag name="fill" value="0x2"/>
            <flag name="stroke_and_fill" value="0x3"/>
        </attr>
        <!-- svg图形数据，可以是普通字符串，也可以是drawable中的vector资源 -->
        <attr name="svg" format="string|reference"/>
        <!-- 轮廓线条宽度，单位为px -->
        <attr name="strokeWidthPx" format="integer"/>
        <!-- 轮廓线条颜色 -->
        <attr name="strokeColor" format="color"/>
        <!-- svg填充颜色 -->
        <attr name="fillColor" format="color"/>
    </declare-styleable>
</resources>