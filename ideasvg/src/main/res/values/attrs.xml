<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- SvgView的自定义属性 -->
    <declare-styleable name="IdeaSvgView">

        <!-- 控件背景 -->
        <attr name="android:background"/>
        <!-- 控件宽 -->
        <attr name="android:layout_width"/>
        <!-- 控件高 -->
        <attr name="android:layout_height"/>

        <!-- svg图形数据，引用vector xml -->
        <attr name="svgSrc" format="reference"/>

        <!-- svg是否居中显示 -->
        <attr name="svgCenter" format="boolean"/>
    </declare-styleable>
</resources>