<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 可使用自定义属性 -->
    <com.qxtx.idea.ideasvg.view.IdeaSvgView
        android:id="@+id/viewSvg"
        app:svgData="@string/svg_heart"
        app:forceCenter="true"
        app:outlineColor="@android:color/holo_red_dark"
        app:outlineWidthPx="5"
        android:background="@mipmap/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll1"/>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/btnScale"
            android:text="缩放动画"
            android:layout_width="90dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btnTranslate"
            android:text="平移动画"
            android:layout_width="90dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btnTrim"
            android:text="裁剪动画"
            android:layout_width="90dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/btnPathMoving"
            android:text="路径运动动画"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_below="@+id/ll1">

        <Button
            android:id="@+id/btnGesture"
            android:text="手势:已禁用"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btnAlpha"
            android:text="透明度"
            android:layout_width="90dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btnColorful"
            android:text="多色描边"
            android:layout_width="90dp"
            android:layout_height="match_parent" />

        <Button

            android:id="@+id/btnSvgChange"
            android:text="变形"
            android:layout_width="90dp"
            android:layout_height="match_parent" />
    </LinearLayout>


</RelativeLayout>